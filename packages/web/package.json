{
  "name": "@cloudnative/web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Official Website of Cloud Native Denmark.",
  "scripts": {
    "develop": "vite",
    "start": "vite",
    "build": "tsc && vite build && cp dist/index.html dist/404.html",
    "serve": "vite preview",
    "clean": "rm -rf dist .vite",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@cloudnative/shared": "workspace:*",
    "fuse.js": "^7.1.0",
    "js-yaml": "^4.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.9.5",
    "tailwindcss": "^4.0.11"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.3",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.3",
    "vite": "^7.2.2",
    "vite-plugin-svgr": "^4.2.0"
  }
}
