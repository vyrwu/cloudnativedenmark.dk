{
  "name": "cloudnativedenmark",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "web:dev": "yarn workspace @cloudnative/web develop",
    "web:build": "yarn workspace @cloudnative/web build",
    "web:serve": "yarn workspace @cloudnative/web serve",
    "web:test": "yarn workspace @cloudnative/web test",
    "mobile:start": "yarn workspace @cloudnative/mobile start",
    "mobile:ios": "yarn workspace @cloudnative/mobile ios",
    "mobile:android": "yarn workspace @cloudnative/mobile android",
    "mobile:test": "yarn workspace @cloudnative/mobile test",
    "shared:build": "yarn workspace @cloudnative/shared build",
    "shared:test": "yarn workspace @cloudnative/shared test",
    "test": "yarn workspaces foreach -A run test",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "lint": "yarn workspaces foreach -A run lint",
    "format": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:fix": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.0.0"
}
